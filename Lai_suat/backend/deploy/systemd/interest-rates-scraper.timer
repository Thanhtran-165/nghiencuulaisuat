[Unit]
Description=Run Interest Rates Scraper Daily
Documentation=https://github.com/your-org/interest-rates-backend
Requires=interest-rates-scraper.service

[Timer]
# Run daily at 02:00 AM
OnCalendar=*-*-* 02:00:00
# If system was off at scheduled time, run immediately on boot
Persistent=true
# Accuracy: fire within 1 minute of scheduled time (default is 1 minute)
AccuracySec=1min

[Install]
WantedBy=timers.target
